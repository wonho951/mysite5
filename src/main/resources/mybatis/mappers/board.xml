<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="board">


	<!-- //전체 게시물 갯수 구하기 -->
	<select id = "selectTotalCnt" resultType = "int">
		<![CDATA[
			select count(*)
			from board
		]]>
	</select>




	<!-- 2021.08.06
	게시판 페이징 연습용 리스트 -->
	<select id = "selectList2" parameterType = "map" resultType = "BoardVo">
		<![CDATA[
			select   rt.rn
			        ,rt.no
			        ,rt.title
			        ,rt.hit
			        ,rt.regDate
			        ,rt.userNo
			        ,rt.name
			from (select   rownum rn
			              ,ot.no
			              ,ot.title
			              ,ot.hit
			              ,ot.regDate
			              ,ot.userNo
			              ,ot.name
			      from (select   b.no
			                    ,b.title
			                    ,b.hit
			                    ,b.reg_date regDate
			                    ,b.user_no userNo
			                    ,u.name
			            from board b, users u
			            where b.user_no = u.no
			            order by b.no desc)ot)rt
			where rn >= #{startRnum}
			and rn <= #{endRnum}
		]]>
	</select>



















	<!-- 조회수올리기(글읽기) -->
	<update id="updateHit" parameterType="int">
		<![CDATA[
			update board
			set hit = hit+1
			where no = #{no}
		]]>
	</update>



	<!-- 게시판 1개 정보 가져오기(읽기,수정폼) -->
	<select id="selectBoard" parameterType="int" resultType = "BoardVo">
		<![CDATA[
			select  b.no,
       				b.title,
			        b.content,
			        b.hit,
			        b.reg_date regDate,	
			        b.user_no userNo,	
			        u.name        
			from board b, users u
			where b.user_no = u.no
			and b.no = #{no}
		]]>
	</select>
	
	
	<!-- 게시글 조회하기 -->
	<select id = "boardList" parameterType = "String" resultType = "BoardVo">
		<![CDATA[
			select   b.no
			        ,b.title
			        ,b.content
			        ,u.name
			        ,b.hit
			        ,b.reg_date
			        ,b.user_no as userNo
			from board b, users u
			where b.user_no = u.no		
		]]>
		
		 <if test=" value != null and value !='' ">
			and b.title || u.name like '%' || #{keyword} ||'%'
		</if>
		
		<![CDATA[
			order by b.reg_date desc
		]]>
	</select>
	
	
	
	<!-- 게시판 글등록 -->
	<insert id="boardInsert" parameterType = "BoardVo">
		<![CDATA[
			insert into board
			values ( seq_board_no.nextval
					,#{title}
					,#{content}
					,0
					,sysdate
					,#{userNo}
				   )		
	   ]]>
	</insert>
	
	
	<!-- 게시판 글 삭제 -->
	<delete id = "boardDelete" parameterType = "int">
		<![CDATA[
			delete from board
			where no = #{no}
		]]>
	</delete>
	
	
	<!-- 게시판 글 수정 (자신의 글만 수정되도록 조건절에 userNo도 비교)-->
	<update id="Update" parameterType = "int">
		update board
		set  title = #{title}
			,content = #{content}
		where no = #{no}
		and user_no=#{userNo}
	</update>
	
	
</mapper>